<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kaivanshah.assignment61.SimpleAddition">
   <EditText
       android:layout_width="match_parent"
       android:layout_height="50dp" android:id="@+id/Edit_Input" />
   <Button
       android:layout_width="match_parent"
       android:layout_height="50dp" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_below="@id/Edit_Input" android:text="@string/btn_Submit" android:id="@+id/btn_Submit" />
   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent" android:textSize="50sp" android:background="@color/colorAccent"  android:id="@+id/tv_Output" android:layout_below="@id/btn_Submit" />

</RelativeLayout>
